@model IEnumerable<WebPhim.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies List</h2>
@Html.ActionLink("Thêm phim mới", "New", "Movies", null,new {@class = "btn btn-default"})
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Danh sách phim.</th>
                <th>Thể loại</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)
                    </td>
                    <td>@movie.GenreMovie.Name</td>
                </tr>
            }
        </tbody>
    </table>

